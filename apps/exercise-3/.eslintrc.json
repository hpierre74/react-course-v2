{
  "extends": [
    "plugin:react-hooks/recommended",
    "plugin:@nrwl/nx/react",
    "../../.eslintrc"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "arrow-parens": ["error", "as-needed"],
        "object-curly-newline": "off",
        "object-curly-spacing": ["error", "always"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "globals": {
    "fetch": false
  }
}
